---
// src/layouts/Layout.astro
import "../styles/global.css";
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Festival de Música - Presentación de estudiantes"
        />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>

        <!-- Google Fonts para tipografía neo-brutalista -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;700&display=swap"
            rel="stylesheet"
        />

        <style>
            body {
                font-family:
                    "Space Grotesk",
                    -apple-system,
                    BlinkMacSystemFont,
                    sans-serif;
            }

            .font-mono {
                font-family: "JetBrains Mono", monospace;
            }

            /* Animaciones personalizadas */
            @keyframes float {
                0%,
                100% {
                    transform: translateY(0px) rotate(0deg);
                }
                50% {
                    transform: translateY(-10px) rotate(2deg);
                }
            }

            @keyframes bounce-subtle {
                0%,
                100% {
                    transform: translateY(0px);
                }
                50% {
                    transform: translateY(-5px);
                }
            }

            @keyframes shake {
                0%,
                100% {
                    transform: translateX(0);
                }
                25% {
                    transform: translateX(-2px);
                }
                75% {
                    transform: translateX(2px);
                }
            }

            .animate-float {
                animation: float 6s ease-in-out infinite;
            }

            .animate-bounce-subtle {
                animation: bounce-subtle 3s ease-in-out infinite;
            }

            .animate-shake {
                animation: shake 0.5s ease-in-out;
            }

            /* Efectos neo-brutalistas */
            .neo-shadow {
                box-shadow: 8px 8px 0px 0px rgba(0, 0, 0, 1);
            }

            .neo-shadow-hover:hover {
                box-shadow: 12px 12px 0px 0px rgba(0, 0, 0, 1);
                transform: translate(-2px, -2px);
            }

            .neo-border {
                border: 4px solid black;
            }

            /* Filtros para imágenes */
            .brutal-filter {
                filter: contrast(120%) saturate(130%) brightness(110%)
                    hue-rotate(5deg);
                mix-blend-mode: multiply;
            }
        </style>
    </head>
    <body class="antialiased">
        <slot />
    </body>
</html>
