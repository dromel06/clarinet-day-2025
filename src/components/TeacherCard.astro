---
export interface Props {
    teacher: {
        id: string;
        name: string;
        gender: "M" | "F";
        image: string;
        songs: Array<{
            title: string;
            move: string;
            author: string;
            duration: string;
            extraInfo?: string;
            students: string[]; // Solo nombres
        }>;
    };
}

const { teacher } = Astro.props;
const teacherTitle = teacher.gender === "F" ? "PROFESORA" : "PROFESOR";
---

<div
    class="bg-gradient-to-br from-green-300 to-blue-300 p-8 rounded-lg neo-border neo-shadow neo-shadow-hover cursor-pointer transition-all duration-300 hover:scale-105 group"
    data-teacher-id={teacher.id}
>
    <!-- Header -->
    <div class="flex justify-between items-start mb-6">
        <div
            class="bg-black text-white px-3 py-1 rounded-lg transform -rotate-2 font-mono font-bold text-sm"
        >
            {teacherTitle}
        </div>
        <div
            class="bg-white bg-opacity-90 px-3 py-1 rounded-full transform rotate-2 font-bold text-xs border-2 border-black"
        >
            Click para ver detalles
        </div>
    </div>

    <!-- Foto del profesor -->
    <div class="flex justify-center mb-6">
        <div class="relative">
            <div
                class="w-32 h-32 rounded-full bg-gradient-to-br from-yellow-400 to-red-500 p-1 transform rotate-3 group-hover:rotate-6 transition-transform duration-300"
            >
                <div class="w-full h-full rounded-full bg-white p-1">
                    <img
                        src={teacher.image}
                        alt={teacher.name}
                        class="w-full h-full object-cover rounded-full brutal-filter"
                    />
                </div>
            </div>
        </div>
    </div>

    <!-- Nombre -->
    <div class="text-center mb-6">
        <h2
            class="text-3xl font-black text-black leading-tight transform -rotate-1 group-hover:rotate-1 transition-transform duration-300"
        >
            {teacher.name.split(" ")[0]}
        </h2>
        <h3
            class="text-xl font-black text-black transform rotate-1 group-hover:-rotate-1 transition-transform duration-300"
        >
            {teacher.name.split(" ")[1]}
        </h3>
    </div>

    <!-- Lista de canciones -->
    <div
        class="bg-white bg-opacity-90 p-4 rounded-lg neo-border transform rotate-1 group-hover:-rotate-1 transition-transform duration-300"
    >
        <h4 class="font-black text-gray-800 mb-3 transform -rotate-1 text-sm">
            REPERTORIO:
        </h4>
        <div class="space-y-2">
            {
                teacher.songs.slice(0, 4).map((song) => (
                    <div class="flex flex-col text-xs bg-gray-100 p-2 rounded-lg">
                        <span class="font-bold text-gray-700 truncate">
                            {song.title} — {song.author}
                        </span>
                        {song.move && (
                            <span class="text-gray-600 italic">
                                {song.move}
                            </span>
                        )}
                        <span class="bg-yellow-400 text-black px-2 py-1 mt-1 rounded-full font-bold w-max transform rotate-2">
                            {song.duration}
                        </span>
                    </div>
                ))
            }
        </div>

        {
            teacher.songs.length > 4 && (
                <div class="text-center mt-3">
                    <span class="text-xs font-bold text-gray-600 bg-gray-200 px-3 py-1 rounded-full transform -rotate-2">
                        +{teacher.songs.length - 3} más
                    </span>
                </div>
            )
        }
    </div>

    <!-- Botón -->
    <div class="mt-4 text-center">
        <div
            class="inline-flex items-center space-x-2 bg-black text-white px-4 py-2 rounded-full font-bold text-sm transform group-hover:scale-110 transition-transform duration-300"
        >
            <span>Ver programa completo</span>
            <span
                class="transform group-hover:translate-x-1 transition-transform duration-300"
                >→</span
            >
        </div>
    </div>
</div>

<style>
    [data-teacher-id]:hover {
        animation: bounce-subtle 0.5s ease-in-out;
    }
</style>
